<!DOCTYPE html>
<html>
  <head>
    <title>Ecom</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "Logout", logout_users_path unless session[:user_id].blank? %>
    <%= logged_in_as unless session[:user_id].blank? %>
    <% flash.each do |_, value| %>
      <%= value%>
    <%end%>
    <%= yield %>
  </body>
</html>
